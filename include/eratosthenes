
#pragma once
#ifndef _ERATOSTHENES_H_
#define _ERATOSTHENES_H_

#include <vector>

class SieveOfEratosthenes {
    std::vector<long> primes;

  public:
    long next();

    inline const std::vector<long> &list() const { return primes; }
    inline std::size_t size() const { return primes.size(); }
};

#endif /* _ERATOSTHENES_H_ */
